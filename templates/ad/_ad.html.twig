{% set url = path('ads_show', {'slug': ad.slug}) %}

            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong> <br/>
                        <small>Pas encore noté</small>
                    </div>
                    <a href="{{ url }}">
                        <img src="{{ ad.coverImage }}" alt="Image apparte" style="height:200px; width: 350px;
                    display:block"/>
                    </a>

                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ url }}">
                                {{ ad.title }}
                            </a>
                        </h4>

                        <p class="card-text">
                            {{ ad.introduction }}
                        </p>
                        <a href="{{ url }}" class="btn btn-secondary">
                        En savoir plus!</a>
                        
                        {#Si il y a un user connecté et l'annonce a ete creer pas le user connecté actuellement#}
                        {% if app.user and app.user == ad.author %}
                            <a href="{{path('ads_edit', { 'slug': ad.slug } )}}" class="btn btn-secondary">Modifier l'annonce</a>
                        {% endif %}
                    </div>
                </div>
        </div>